<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	<insert id="create" parameterType="productVO">
		insert into bbs values(#{id}, #{title}, #{content}, #{writer})
	</insert>
	<!-- r은 하나의 row, 전체리스트 rows -->
	<select id="one" parameterType="productVO" resultType="productVO">
		select * from bbs where id = #{id}
	</select>
	<select id="all" resultType="productVO">
		select * from bbs
	</select>
	<!-- u는 id에 맞는 title, content수정 -->
	<update id="up" parameterType="productVO">
		update bbs set title = #{title}, content=#{content} where id = #{id} 
	</update>
	<!-- d는 id에 맞는 게시물 삭제  -->
	<delete id="del" parameterType="productVO">
		delete from bbs where id = #{id}
	</delete>
</mapper>











